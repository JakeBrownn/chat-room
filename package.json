{
  "name": "chat-room",
  "version": "1.0.0",
  "description": "A simple messenger app built with Node.js (Express) and Socket.io",
  "main": "index.js",
  "scripts": {
    "server": "nodemon index.js",
    "build:dev": "concurrently \"webpack -p\" \"nodemon index.js\"",
